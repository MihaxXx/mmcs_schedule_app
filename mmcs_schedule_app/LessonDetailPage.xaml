<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="mmcs_schedule_app.LessonDetailPage"
             BackgroundColor="Transparent">
    <Grid>
        <!-- Semi-transparent background -->
        <BoxView Color="Black" 
                 Opacity="0.5">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackgroundTapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>
        
        <!-- Popup content -->
        <Frame VerticalOptions="End"
               Margin="0"
               Padding="0"
               CornerRadius="20"
               HasShadow="True"
               BackgroundColor="{AppThemeBinding Light=#F5FFFFFF, Dark=#F51E1E1E}">
            <VerticalStackLayout Spacing="0">
                <!-- Handle bar -->
                <BoxView HeightRequest="4"
                         WidthRequest="40"
                         CornerRadius="2"
                         Color="Gray"
                         HorizontalOptions="Center"
                         Margin="0,10,0,15"/>
                
                <ScrollView MaximumHeightRequest="600">
                    <VerticalStackLayout Padding="20,0,20,20" Spacing="15">
                        <!-- Discipline name -->
                        <Label x:Name="DisciplineLabel" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        
                        <!-- Weekday -->
                        <Label x:Name="WeekdayLabel" 
                               FontSize="16"
                               HorizontalTextAlignment="Center"/>
                        
                        <!-- Timeslot -->
                        <Label x:Name="TimeslotLabel" 
                               FontSize="16"
                               HorizontalTextAlignment="Center"/>
                        
                        <!-- Week type (верхняя/нижняя) -->
                        <Label x:Name="WeekTypeLabel" 
                               FontSize="14"
                               FontAttributes="Italic"
                               HorizontalTextAlignment="Center"/>
                        
                        <!-- Teachers/Groups list container -->
                        <VerticalStackLayout x:Name="TeachersStackLayout"
                                            Spacing="10"/>
                    </VerticalStackLayout>
                </ScrollView>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
